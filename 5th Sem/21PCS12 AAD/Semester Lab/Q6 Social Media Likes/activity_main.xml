<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:contentDescription="Profile Picture" />
    <TextView
        android:id="@+id/postText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profilePicture"
        android:layout_alignTop="@id/profilePicture"
        android:text="This is a sample social media post text."
        android:layout_marginEnd="8dp" />
    <TextView
        android:id="@+id/likeCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Likes: 0"
        android:layout_below="@id/postText"
        android:layout_toEndOf="@id/profilePicture"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:layout_below="@id/likeCounter"
        android:layout_alignStart="@id/likeCounter"
        android:layout_marginTop="8dp" />
</RelativeLayout>
